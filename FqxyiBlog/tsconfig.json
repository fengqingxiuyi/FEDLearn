{
  "compilerOptions": {
    "paths": {
        "@/assets/*": ["./src/assets/*"],
        "@/common/*": ["./src/common/*"],
        "@/components/*": ["src/components/*"],
        "@/config/*": ["./src/config/*"],
        "@/constants/*": ["./src/constants/*"],
        "@/store/*": ["./src/store/*"],
    },
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "preserve",
    "jsxFactory": "Taro.createElement",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false
}
